<%= turbo_frame_tag dom_id(@post) do %>
  <article class="card">
    <div class="card-body">
      <h5><%= @post.title %></h5>
      
      <p class="lead"><%= @post.body %></p>
    </div>

    <div class="card-footer">
      <%= link_to 'View', @post, class: 'text-primary me-2' %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'text-primary' %>
    </div>
  </article>
<% end %>